<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- User list. -->
    <style name="nameContent">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginEnd">@dimen/dimen10</item>
    </style>

    <!-- SignIn SignUp -->
    <style name="signInUpTitle">
        <item name="android:layout_marginTop">@dimen/margin20</item>
        <item name="android:layout_marginStart">@dimen/margin20</item>
        <item name="android:textSize">@dimen/register_tvSize</item>
    </style>

    <style name="signInUpInput">
        <item name="android:layout_marginEnd">@dimen/margin20</item>
        <item name="android:layout_marginStart">@dimen/margin20</item>
        <item name="android:textSize">@dimen/register_tvSize</item>
    </style>

</resources>
